<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="greyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/keys_light_grey_ripple</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="orangeButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/keys_orange_ripple</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="darkGreyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/keys_dark_grey_ripple</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="resultStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="layout_constraintVertical_weight">1</item>
        <item name="android:gravity">end|center</item>
        <item name="android:fontFamily">@font/ys_display_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">90sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">none</item>
    </style>

</resources>